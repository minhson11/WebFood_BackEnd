<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <div class="admin-container">
        <!-- Sidebar -->
        <nav class="sidebar">
            <div class="p-3">
                <div class="text-center mb-4">
                    <h4 class="text-white">
                        <i class="fas fa-cog me-2"></i>Admin Panel
                    </h4>
                    <small class="text-white-50">Quản lý hệ thống</small>
                </div>

                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")" 
                           href="http://localhost:5120/Admin/Home/Index">
                            <i class="fas fa-home"></i>Trang chủ
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "MonAn" ? "active" : "")" 
                           href="http://localhost:5120/Admin/MonAn/Index">
                            <i class="fas fa-utensils"></i>Quản lý món ăn
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "DonHang" ? "active" : "")" 
                           href="http://localhost:5120/Admin/DonHang/Index">
                            <i class="fas fa-shopping-bag"></i>Quản lý đơn hàng
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "TaiKhoan" ? "active" : "")" 
                           href="http://localhost:5120/Admin/TaiKhoan/DanhSach">
                            <i class="fas fa-users"></i>Quản lý tài khoản
                        </a>
                    </li>
                    <li class="nav-item mt-4">
                        <a class="nav-link" href="http://localhost:5120/">
                            <i class="fas fa-arrow-left"></i>Về trang chủ
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Top Navbar -->
            <div class="top-navbar">
                <div class="d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="fas fa-tachometer-alt me-2"></i>@ViewData["Title"]
                    </h4>
                    <div>
                        <span class="text-muted">Xin chào, Admin</span>
                        <a href="http://localhost:5120/TaiKhoan/DangXuat" class="btn btn-outline-danger btn-sm ms-2">
                            <i class="fas fa-sign-out-alt"></i>Đăng xuất
                        </a>
                    </div>
                </div>
            </div>

            <!-- Page Content -->
            @RenderBody()
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 